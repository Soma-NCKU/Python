# Iterating over a range

for i in range(1, 21):       # note the range will count from 1 upto 19 only
    print("i is now {}".format(i))

print('*' * 80)
# if we wish to repeat a block of code using range (start value is not provided)
for i in range(10):
    print("i is now {}".format(i))

print('*' * 80)
# using step value
for i in range(0, 10, 2):
    print("i is now {}".format(i))

print('*' * 80)
for i in range(10, 0, -2):
    print("i is now {}".format(i))
    
