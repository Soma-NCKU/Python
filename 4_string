# Mini Challenge
# do the above task with negative indexing

print("Use negative indexing")
print(parrot[-11])
print(parrot[-1])
print(parrot[-5])
print(parrot[-11])
print(parrot[-8])
print(parrot[-6])

print("Another alternative way")
print(parrot[3 - 14])
print(parrot[4 - 14])
print(parrot[9 - 14])
print(parrot[3 -14])
print(parrot[6 - 14])
print(parrot[8 -14])

# Slicing - upto but not including
print(parrot[0:6])
print(parrot[3:5])
print(parrot[0:9])
print(parrot[:9])
print(parrot[10:])

print()
# what will happen .. think??
print(parrot[:])
